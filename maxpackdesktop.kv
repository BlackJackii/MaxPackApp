<ExpPanel>:
    orientation: "vertical"
    size_hint: 1, None
    height: self.minimum_height
    adaptive_height: True
    BoxLayout:
        padding: 0, 20
        size_hint_y: None
        height: self.minimum_height

    #Высота, ширина, дно, печать
        Label:
            id: exp_panel_size
            size_hint: root.exp_label_size_hint
            text: "Шир"
            font_size: root.exp_label_font_size
            color: 0, 0, 0, 1
    #Формат, рукав, граматура
        Label:
            id: exp_panel_paper_spec
            size_hint: root.exp_label_size_hint
            text: "Выс"
            font_size: root.exp_label_font_size
            color: 0, 0, 0, 1
    #Курсб наценка
        Label:
            id: exp_panel_exch
            size_hint: root.exp_label_size_hint
            text: "Дно"
            font_size: root.exp_label_font_size
            color: 0, 0, 0, 1
    #Себестоим, цена, сумма
        Label:
            id: exp_panel_cost
            size_hint: root.exp_label_size_hint
            text: "Дно"
            font_size: root.exp_label_font_size
            color: 0, 0, 0, 1
#Кнопа удаления заказа из списка заказов
    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        BoxLayout:
            size_hint: 1, None
            MDIconButton:
                icon: "delete_icon.png"
                on_press: app.root.get_screen("second").delete_record()
    #Кнопа возвращения заказа в конструктор
        BoxLayout:
            size_hint: .25, None
            height: self.minimum_height
            MDFillRoundFlatButton:
                id: return_to_button
                size_hint: None, None
                text: "Вернуть в конструктор"
                text_color: root.md_button_color
                font_size: 20
                md_bg_color: 0.51, 0.7, 0.25, 1
                on_press: app.root.get_screen("main").return_from_orders()
                on_press: app.root.current = "main"
    #Кнопа сохранения в PDF
        BoxLayout:
            size_hint: .25, None
            height: self.minimum_height
            MDFillRoundFlatButton:
                size_hint: None, None
                text: "Сохранить в PDF"
                text_color: root.md_button_color
                font_size: 20
                md_bg_color: 0.51, 0.7, 0.25, 1
                on_press: app.root.get_screen("second").save_to_file_btn()



